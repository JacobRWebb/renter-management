generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  TENANT
  WORKER
}

enum RESIDENTIAL_TYPE {
  APARTMENT
  HOUSE
  CONDO
  DUPLEX
  TOWNHOUSE
  OTHER
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  password  String
  name      Name?
  roles     Role[]
  stripeId  String
  property  Property[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Name {
  id            String @id @default(cuid())
  firstName     String
  middleInitial String
  lastName      String
  User          User   @relation(fields: [userId], references: [id])
  userId        String @unique
}

model Property {
  id        String           @id @default(cuid())
  address   Address?         @relation(fields: [addressId], references: [id])
  addressId String?
  type      RESIDENTIAL_TYPE
  users     User[]
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}

model Address {
  id       String     @id @default(cuid())
  street   String
  street2  String?
  city     String
  state    String
  zip      String
  country  String
  Property Property[]
}
